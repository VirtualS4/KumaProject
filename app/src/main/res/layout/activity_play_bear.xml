<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PlayBear">
        <FrameLayout
            android:layout_width="360dp"
            android:layout_height="400dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/block1"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block4"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="#0000FF"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/block5"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="90dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block6"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="90dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block7"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="90dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block8"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="90dp"
                            android:background="#0000FF"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/block9"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="180dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block10"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="180dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block11"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="180dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block12"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="180dp"
                            android:background="#0000FF"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/block13"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="270dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block14"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="270dp"
                            android:background="#0000FF"
                            />
                        <ImageView
                            android:id="@+id/block15"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="270dp"
                            android:background="#0000FF"
                            />
                </LinearLayout>
        </FrameLayout>


        <Button
            android:id="@+id/Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <Button
                    android:id="@+id/Left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left"/>

                <Button
                    android:id="@+id/Down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Down"/>
                <Button
                    android:id="@+id/Right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right"/>
        </LinearLayout>


</LinearLayout>